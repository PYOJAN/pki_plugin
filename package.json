{
  "name": "PKI_Plugin",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "pki_electron",
    "email": "pki@gmail.com"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "fast-xml-parser": "^4.0.9",
    "fs-extra": "^10.1.0",
    "notiflix": "^3.2.5",
    "pdf-parse": "^1.1.1",
    "pdf-to-base64": "^1.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.3.0",
    "react-icons": "^4.4.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "win-ca": "^3.5.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "ele-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && nodemon --exec electron .\"",
    "dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-package": "./node_modules/.bin/electron-builder --windows -c.extraMetadata.main=build/electron.js",
    "preelectron-package": "npm run build"
  },
  "build": {
    "appId": "com.plugin.pki",
    "productName": "PKI Plugin",
    "files": [
      "build/**/*",
      "database/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./public/assets/App-Icon.png"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "./LICENSE"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "electron": "^19.0.5",
    "electron-builder": "^23.0.3",
    "electron-devtools-installer": "^3.2.0",
    "wait-on": "^6.0.1"
  }
}
